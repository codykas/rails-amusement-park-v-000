<h1>Attractions</h1>
<%= link_to 'Add a New Attraction', new_attraction_path %><br>
<% @attractions.each do |attraction| %>
  <% if current_user.admin %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %><br>
  <% else %>
    <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %><br>
  <% end %>

  Tickets: <%= attraction.tickets %><br>
  Nausea Rating: <%= attraction.nausea_rating %><br>
  Happiness Rating: <%= attraction.happiness_rating %><br>
  Minimum Height: <%= attraction.min_height %><br>
<% end %>
